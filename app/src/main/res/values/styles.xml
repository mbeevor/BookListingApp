<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="search">
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="appHeader">
        <item name="android:textSize">36sp</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="bookTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="bookAuthor">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="textSnippet">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>

    </style>

    <style name="button">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/weblink_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_margin">@dimen/button_margin</item>

    </style>

</resources>
